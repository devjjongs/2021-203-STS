<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- com.bit.spring.model.orm.dao.MemberDaoMyBatis 의 implements 로 구현부를 가지고 
	있다 -->
<mapper namespace="com.bit.spring.model.orm.dao.MemberDaoMyBatis">
	<select id="getAllMember"
		resultType="Member"> <!-- servlet-context 57번 라인 => name="typeAliasesPackage" value="com.bit.spring.model.orm.vo" 했기 떄문에 페키지 생략 -->
		select userId ,userPw , email, age, userName from member
	</select>
	<!-- id = 위치 지정한 클래스/인터페이스에 있는 메소드를 입력 -->
	<!-- resultType = 어느 위치의 누가 받을 것인지 입력 -->

	<select id="getMember"
		resultType="com.bit.spring.model.orm.vo.Member">
		select email, age, userName from member where userId =#{userId} and userPw = #{userPw}
		<!-- #{}를 이용해서  ?를 대신함-->
	</select>
	
</mapper>